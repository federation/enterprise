{
  "name": "@federation/enterprise",
  "version": "0.0.1",
  "main": "build/index",
  "types": "build/index.d.ts",
  "repository": "https://github.com/federation/enterprise",
  "author": "Jorge Israel Pe√±a <jorge.israel.p@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "test": "jest",
    "coverage": "jest --coverage --colors",
    "docs": "typedoc --out docs/ src/",
    "lint": "eslint --ext .ts src/",
    "tslint": "tslint -c ./tslint.json --project .",
    "start:live": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts"
  },
  "dependencies": {
    "apollo-server": "^2.0.0-rc.0",
    "apollo-server-koa": "^2.0.0-beta.9",
    "argon2": "^0.19.3",
    "dotenv": "^6.0.0",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^3.0.2",
    "jsonwebtoken": "^8.2.2",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.10",
    "logform": "^1.9.0",
    "pg": "^7.4.3",
    "uuid": "^3.2.1",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/graphql": "^0.13.1",
    "@types/jest": "^23.0.0",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.28",
    "@types/node": "^10.3.0",
    "@types/node-fetch": "^2.1.1",
    "@types/pg": "^7.4.9",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^5.1.2",
    "eslint": "^4.19.1",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.1.0",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.1",
    "typescript-eslint-parser": "^16.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules",
      "src/modules.d.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**"
    ]
  }
}
