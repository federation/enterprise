{
  "name": "@federation/enterprise",
  "version": "0.0.1",
  "main": "build/index",
  "types": "build/index.d.ts",
  "repository": "https://github.com/federation/enterprise",
  "author": "Jorge Israel Pe√±a <jorge.israel.p@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "test": "jest",
    "coverage": "jest --coverage --colors",
    "docs": "typedoc --out docs/ src/",
    "lint": "tslint -c ./tslint.json --project .",
    "start:live": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts"
  },
  "dependencies": {
    "apollo-server-koa": "^1.3.6",
    "bcrypt": "^2.0.1",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.2",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "pg": "^7.4.3"
  },
  "devDependencies": {
    "@types/graphql": "^0.13.1",
    "@types/jest": "^22.2.3",
    "@types/koa": "^2.0.45",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-router": "^7.0.28",
    "@types/node": "^10.0.0",
    "@types/pg": "^7.4.9",
    "jest": "^22.4.3",
    "nodemon": "^1.17.3",
    "ts-jest": "^22.4.5",
    "ts-node": "^6.0.1",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**"
    ]
  }
}
