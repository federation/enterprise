{
  "name": "@federation/enterprise",
  "version": "0.0.1",
  "main": "build/index",
  "types": "build/index.d.ts",
  "repository": "https://github.com/federation/enterprise",
  "author": "Jorge Israel Pe√±a <jorge.israel.p@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "test": "jest",
    "coverage": "jest --coverage --colors",
    "docs": "typedoc --out docs/ src/",
    "lint": "eslint --ext .ts src/",
    "tslint": "tslint -c ./tslint.json --project .",
    "start:live": "nodemon --exec ./node_modules/.bin/ts-node --files -- ./src/index.ts"
  },
  "dependencies": {
    "apollo-server-koa": "^2.0.4",
    "argon2": "^0.19.3",
    "bluebird": "^3.5.1",
    "dotenv": "^6.0.0",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "graphql-tools": "^3.0.2",
    "http-status": "^1.2.0",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-compose": "^4.1.0",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.8.3",
    "lodash": "^4.17.10",
    "logform": "^1.9.1",
    "pg": "^7.4.3",
    "redis": "^2.8.0",
    "uuid": "^3.3.2",
    "winston": "^3.0.0",
    "winston-transport": "^4.2.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.23",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^23.3.1",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.31",
    "@types/koa-session": "^5.7.4",
    "@types/node": "^10.9.1",
    "@types/node-fetch": "^2.1.2",
    "@types/pg": "^7.4.10",
    "@types/redis": "^2.8.6",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^6.0.0",
    "eslint": "^5.4.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "roots": [
      "<rootDir>/src"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules",
      "src/modules.d.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**"
    ]
  }
}
